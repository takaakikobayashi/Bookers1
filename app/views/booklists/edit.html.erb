<%= flash[:notice] %>
<h1>Editing Book</h1>
<%= form_for(@book, url:"/booklists/#{@book.id}") do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %><br>
    <%= f.submit "Update Book" %>  
<br>
    <%= link_to "Show", booklist_path(@book.id) %>
    <%= link_to "Back", booklists_path %>
<% end %>