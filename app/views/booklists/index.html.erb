 <h1>Books</h1>
 <table>
 	<thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
   <% @books.each do |book| %>
   <tr>
   	  <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%=link_to "Show", booklist_path(book.id) %></td>
      <td><%=link_to "Edit", edit_booklist_path(book.id) %></td>
      <td><%=link_to "Destroy", destroy_booklist_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %></td>
    </tr>
    <% end %>
    </tbody>
   </table>

   <h3>New book</h3>
<!-- form_for部分 -->
   <%= form_for(@book, url: "/booklists") do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %><br>
 
    <%= f.submit 'Create Book' %>
 
<% end %>